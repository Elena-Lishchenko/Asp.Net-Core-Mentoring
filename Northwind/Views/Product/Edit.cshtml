@model Northwind.ViewModels.ProductForEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.ProductID" />
            <div class="form-group">
                <label asp-for="Product" class="control-label"></label>
                <input asp-for="Product.ProductName" class="form-control" />
                <span asp-validation-for="Product.ProductName" class="text-danger"></span>
            </div>
			<div class="form-group">
				<label asp-for="Product.Category" class="control-label"></label>
				<select asp-for="Product.Category.CategoryID" asp-items='new SelectList(Model.Categories, "CategoryID","CategoryName",Model.Product.Category.CategoryID)' asp-class="form-control"></select>
            </div>
			<div class="form-group">
				<label asp-for="Product.Supplier" class="control-label"></label>
				<select asp-for="Product.Supplier.SupplierID" asp-items='new SelectList(Model.Suppliers, "SupplierID","CompanyName",Model.Product.Supplier.SupplierID)' asp-class="form-control"></select>
			</div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
